<div class="calendar-container">
	<div class="calendar-grid-container">
		<% @calendar_days.each do |day| %>
			<div class="calendar-day">
				<p class="specific-day"><%= day %></p>
				<% @planted_crops.each do |crop| %>
					<% if crop[:first_harvest].to_i == day || crop[:sub_harvests].include?(day) %>
						<img class="produce-img" src="/img/<%= convert_crop_name_with_space(return_crop_name(crop[:crop_id])) %>.png">
						<p class="produce-name"><%= return_crop_name_reduce_name(crop[:crop_id]) %> <span class="produce-amount">x<%= crop[:amount_planted] %></span></p>
						<p class="produce-money">$<%= return_crop_profit(crop[:crop_id], crop[:amount_planted]) %></p>
						<br>
						<br>
					<% end %> 
				<% end %>
			</div>
		<% end %>
	</div>
</div>
<div class="header-container">
	<h2>Stardew Valley Crop Planner</h2>
</div>
	<div class="form-container">
		<div class="calendar-grid-form-container">
			<div class="add-crop-form">
				<h5>Add Plants</h5>
				<form action="/add_crop_calendar" method="post">
					<ul class="form-list">
						<li>Crop Name</li>
						<li>
							<select class="input-calendar" name="crop_name" required>
								<% @crops.each do |crop| %>
									<option><%= crop[:name] %></option>
								<% end %>
							</select>
						</li>
						<li>Date Planted</li>
						<li>
							<select class="input-calendar" name="plant_date" required>
								<% available_planting_days.each do |num| %>
									<option><%= num %></option>
								<% end %>
							</select>
						</li>
						<li>Amount Planted</li>
						<li>
							<input class="input-calendar" type="number" max="1000" min="1" name="amount_planted" required >
						</li>
					</ul>
					<input type="submit" value="Add Crop">
				</form>
			</div>
			<div class="delete-crop-form">
				<form action="/<%= @season %>/delete_single_crop" method="post">
					<h5>Remove Plants</h5>
					<ul class="form-list">
						<li>Crop Name</li>
						<li>
							<select class="input-calendar" name="id">
								<% @planted_crops.each do |crop| %>
									<option value="<%= crop[:id] %>"><%= return_crop_name(crop[:crop_id]) %>, First Harvest: <%= crop[:first_harvest] %></option>
								<% end %>
							</select>
						</li>
						<li>
							<input class="input-calendar" type="submit" value="Delete Single Crop">
						</li>
					</ul>
				</form>
				<form action="/<%= @season %>/delete_season_crops" method="post">
					<ul class="form-list">
						<li>Delete All Crops</li>
						<li>
							<input class="input-calendar" type="submit" value="Delete Crops">
						</li>
					</ul>
				</form>
			</div>
			<div class="change-season-form">
				<h5>Change Season</h5>
				<ul class="form-list">
					<% @seasons.each do |season| %>
					 <% if season != @season %>
						<li class="season-option">
							<a href="/calendar/<%= season.downcase %>"><%= season %></a>
						</li>
						<% end %>
					<% end %>
				</ul>
			</div>
			<div class="return-home-form">
				<h5 class="idx-return-heading">Return to Index</h5>
				<ul class="form-list">
					<li style="text-align: center;">
						<a href="/"><img src="/img/player.png"></a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="banner-container-cal">
		<h2 class="banner-container-heading"><%= @season %></h2>
	</div>
	<div class="banner-profit-container">
		<p class="banner-profit-cal">Profit: <span class="profit-number">$<%= convert_number_to_string(@gross - @cost) %></span></p>
	</div>
</div>

